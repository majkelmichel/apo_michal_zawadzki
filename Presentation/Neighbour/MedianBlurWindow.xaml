<Window x:Class="Presentation.Neighbour.MedianBlurWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Presentation.Neighbour"
        mc:Ignorable="d"
        Title="Median Blur" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock>Kernel size</TextBlock>
        <TextBox Grid.Column="2" Name="NumericInput"
                 Text="1"
                 PreviewTextInput="NumericInput_PreviewTextInput"
                 DataObject.Pasting="NumericInput_Pasting" />
        <Button Click="CalculateMedianBlur">Use median blur</Button>
    </StackPanel>
</Window>
