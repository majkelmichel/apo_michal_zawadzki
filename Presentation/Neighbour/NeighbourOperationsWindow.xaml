<Window x:Class="Presentation.Neighbour.NeighbourOperationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="NeighbourOperationsWindow" Height="450" Width="800">
    <StackPanel>
        <Grid Margin="0, 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <ComboBox Name="BorderType"
                      Text="Border type"
                      IsEditable="True">
            </ComboBox>
            <TextBox Grid.Column="1" Name="NumericInput"
                     Text="1"
                     PreviewTextInput="NumericInput_PreviewTextInput"
                     DataObject.Pasting="NumericInput_Pasting" />
        </Grid>
        <Grid Margin="0, 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Click="Blur">Blur</Button>
            <Button Grid.Column="1">Median Blur</Button>
            <Button Grid.Column="2">Gaussian Blur</Button>
        </Grid>
        <Grid Margin="0, 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0">Blur</Button>
            <Button Grid.Column="1">Median Blur</Button>
            <Button Grid.Column="2">Gaussian Blur</Button>
        </Grid>
    </StackPanel>
</Window>