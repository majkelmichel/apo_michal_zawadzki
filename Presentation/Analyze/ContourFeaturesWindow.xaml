                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0">Solidity: </TextBlock>
            <TextBlock Grid.Column="1" x:Name="Solidity"> </TextBlock>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0">Equivalent diameter: </TextBlock>
            <TextBlock Grid.Column="1" x:Name="EquivalentDiameter"> </TextBlock>
