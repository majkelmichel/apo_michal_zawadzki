<Window x:Class="Presentation.HistogramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Histogram obrazu szaroodcieniowego"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Obszar rysowania histogramu -->
        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" Margin="0,0,0,10">
            <Canvas x:Name="HistogramCanvas" Background="White" />
        </Border>

        <!-- Statystyki -->
        <GroupBox Grid.Row="1" Header="Statystyki obrazu" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Column="0" Grid.Row="0" Margin="5">
                    <TextBlock FontWeight="Bold">Wartość średnia:</TextBlock>
                    <TextBlock x:Name="MeanText" FontSize="14" />
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="0" Margin="5">
                    <TextBlock FontWeight="Bold">Odchylenie standardowe:</TextBlock>
                    <TextBlock x:Name="StdDevText" FontSize="14" />
                </StackPanel>

                <StackPanel Grid.Column="2" Grid.Row="0" Margin="5">
                    <TextBlock FontWeight="Bold">Mediana:</TextBlock>
                    <TextBlock x:Name="MedianText" FontSize="14" />
                </StackPanel>

                <StackPanel Grid.Column="0" Grid.Row="1" Margin="5">
                    <TextBlock FontWeight="Bold">Wartość minimalna:</TextBlock>
                    <TextBlock x:Name="MinText" FontSize="14" />
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="1" Margin="5">
                    <TextBlock FontWeight="Bold">Wartość maksymalna:</TextBlock>
                    <TextBlock x:Name="MaxText" FontSize="14" />
                </StackPanel>

                <StackPanel Grid.Column="2" Grid.Row="1" Margin="5">
                    <TextBlock FontWeight="Bold">Liczba pikseli:</TextBlock>
                    <TextBlock x:Name="TotalPixelsText" FontSize="14" />
                </StackPanel>
            </Grid>
        </GroupBox>
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Rozciągnij histogram" Margin="0,0,5,0" Height="30" Click="StretchHistogram" />
            <Button Grid.Column="1" Content="Rozciągnij histogram z przesyceniem 5%" Margin="5,0,5,0" Height="30" Click="StretchHistogramWithOversaturation" />
            <Button Grid.Column="2" Content="Equalizuj" Margin="5, 0,0,0" Height="30" Click="Equalize" />
        </Grid>
    </Grid>
</Window>