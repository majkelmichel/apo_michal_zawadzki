<Window x:Class="Presentation.Point.Math.NumberOperations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="NumberOperations" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <CheckBox Content="Saturate" Name="Saturate"></CheckBox>
            <TextBox Name="NumericInput"
                     Width="200"
                     Height="30"
                     Margin="0,0,0,10"
                     PreviewTextInput="NumericInput_PreviewTextInput"
                     DataObject.Pasting="NumericInput_Pasting" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Name="Add"
                        Margin="10, 0"
                        Content="Add"
                        Width="100"
                        Height="30"
                        Click="AddClick" />
                <Button Grid.Column="1" 
                        Margin="10, 0"
                        Name="Multiply"
                        Content="Multiply"
                        Width="100"
                        Height="30"
                        Click="MultiplyClick" />
                <Button Grid.Column="2" 
                        Margin="10, 0"
                        Content="Divide"
                        Width="100"
                        Height="30"
                        Click="DivideClick" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>