<Window x:Class="Presentation.Point.BinaryThreshold"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Presentation.Point"
        mc:Ignorable="d"
        Title="Binary Threshold" Height="150" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Name="NumericInput" 
                     Width="200" 
                     Height="30"
                     Margin="0,0,0,10"
                     PreviewTextInput="NumericInput_PreviewTextInput"
                     DataObject.Pasting="NumericInput_Pasting"/>
            <Button Name="SubmitButton" 
                    Content="Submit" 
                    Width="100" 
                    Height="30"
                    Click="SubmitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
