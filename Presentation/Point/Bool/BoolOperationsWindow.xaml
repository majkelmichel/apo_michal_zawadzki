<Window x:Class="Presentation.Point.Bool.BoolOperationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Presentation.Point.Bool"
        mc:Ignorable="d"
        Title="BoolOperations" Height="450" Width="800" d:DataContext="{d:DesignInstance local:BoolOperationsWindow}">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <ComboBox Name="SelectImage"
                      ItemsSource="{Binding Windows}"
                      Text="Image to apply"
                      IsEditable="True"
                      SelectionChanged="SelectImage_OnSelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Title}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button
                    Margin="10, 0"
                        Content="Not"
                        Width="100"
                        Height="30"
                        Click="NotClick" />
                <Button Grid.Column="1" 
                        Margin="10, 0"
                        Content="And"
                        Width="100"
                        Height="30"
                        Click="AndClick" />
                <Button Grid.Column="2" 
                        Margin="10, 0"
                        Content="Or"
                        Width="100"
                        Height="30"
                        Click="OrClick" />
                <Button Grid.Column="3" 
                        Margin="10, 0"
                        Content="Xor"
                        Width="100"
                        Height="30"
                        Click="XorClick" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
