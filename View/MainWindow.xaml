<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="View.MainWindow"
        Title="View">
        <DockPanel>
                <Menu DockPanel.Dock="Top">
                        <MenuItem Header="_File">
                                <MenuItem Header="_OpenImage" Click="OnOpenImage" HotKey="Ctrl+O"/>
                                <MenuItem Header="_Exit" Click="OnExit" HotKey="ALT+F4"></MenuItem>
                        </MenuItem>
                </Menu>
                
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
                        <TextBlock Text="Use File â†’ Open Image or press Ctrl+O" FontSize="16" />
                        <Button x:Name="OpenImageButton" Content="Open Image..." Width="150" />
                </StackPanel>
        </DockPanel>
</Window>
